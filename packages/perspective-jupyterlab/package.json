{
    "name": "@jpmorganchase/perspective-jupyterlab",
    "version": "0.2.15",
    "description": "Perspective.js",
    "files": [
        "build/*.d.ts",
        "build/*.js.map",
        "build/*.js",
        "build/*.wasm",
        "src/css/*.css",
        "babel.config.js"
    ],
    "main": "build/index.js",
    "types": "build/index.d.ts",
    "directories": {
        "build": "build/"
    },
    "license": "Apache-2.0",
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "bench": "npm-run-all bench:build bench:run",
        "bench:build": "echo \"No Benchmarks\"",
        "bench:run": "echo \"No Benchmarks\"",
        "test": "npm-run-all test:run",
        "test:run": "jest -i --no-cache --rootDir=. --env=jsdom",
        "build": "webpack --color --config src/config/plugin.config.js",
        "clean": "rimraf build"
    },
    "jest": {
        "verbose": true,
        "transform": {"^.+\\.(ts|tsx)$": "ts-jest", ".+\\.(css|styl|less|sass|scss)$": "jest-transform-css"},
        "cache": false,
        "testMatch": ["<rootDir>/test/ts/*.spec.ts"],
        "testPathIgnorePatterns": ["<rootDir>/build", "<rootDir>/test/js"],
        "transformIgnorePatterns": ["node_modules"],
        "moduleNameMapper": {
            "\\.(css|less)$": "<rootDir>/test/js/styleMock.js",
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga|wasm|wasm.worker.js)$": "<rootDir>/test/js/fileMock.js"
        },
        "preset": "ts-jest",
        "testEnvironment": "jsdom",
        "globals": {"ts-jest": {"tsConfig": "<rootDir>/tsconfig.json"}}
    },
    "dependencies": {
        "@jpmorganchase/perspective-phosphor": "^0.2.15",
        "@jupyter-widgets/base": "^1.1.10",
        "@phosphor/application": "^1.5.0",
        "@phosphor/widgets": "^1.6.0"
    },
    "devDependencies": {
        "@jpmorganchase/perspective-webpack-plugin": "^0.2.15",
        "@types/jest": "^23.3.9",
        "css-loader": "^0.26.1",
        "file-loader": "^0.11.1",
        "identity-obj-proxy": "^3.0.0",
        "isomorphic-fetch": "^2.2.1",
        "jest": "^23.6.0",
        "jest-transform-css": "^2.0.0",
        "rimraf": "^2.5.2",
        "source-map-support": "^0.5.9",
        "style-loader": "^0.13.1",
        "ts-jest": "^23.10.4",
        "typescript": "^3.2.4",
        "webpack": "^2.2.1"
    },
    "jupyterlab": {
        "extension": "build/index.js"
    }
}
