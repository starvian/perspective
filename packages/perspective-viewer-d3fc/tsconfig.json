{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2018",
    "declaration": true,
    "diagnostics": true,
    "emitDeclarationOnly": true,
    "outDir": "dist/esm",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
  },
  "include": [
    "./src/ts/**/*",
    "./types.d.ts",
  ],
}